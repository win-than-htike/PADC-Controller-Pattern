<?xml version="1.0" encoding="utf-8"?>
<xyz.winthan.padc_homework2.ViewPodRommInfo
    android:id="@+id/view_pod_room"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:weightSum="4"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_guest"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_accessibility_black_24dp"
        android:gravity="center"
        android:drawablePadding="@dimen/margin_medium"
        android:text="4 guests"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_room_black_24dp"
        android:gravity="center"
        android:drawablePadding="@dimen/margin_medium"
        android:text="1 room"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_bug_report_black_24dp"
        android:gravity="center"
        android:drawablePadding="@dimen/margin_medium"
        android:text="2 beds"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_dashboard_black_24dp"
        android:gravity="center"
        android:drawablePadding="@dimen/margin_medium"
        android:text="1 bath"/>

</xyz.winthan.padc_homework2.ViewPodRommInfo>